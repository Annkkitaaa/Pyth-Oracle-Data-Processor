# Pyth Oracle Data Processor Environment Variables

# API Configuration
HERMES_API_URL=https://hermes.pyth.network
API_TIMEOUT=30000
RETRY_ATTEMPTS=3

# Debug and Logging
DEBUG=false
LOG_LEVEL=info

# Output Configuration
OUTPUT_DIR=./data
SAVE_RAW_DATA=true
SAVE_DECODED_DATA=true

# Processing Configuration
SELECTED_INDICES=0,4,8,12,16
MAX_FEEDS=20

# Optional: Custom Hermes endpoint (if using private instance)
# CUSTOM_HERMES_URL=https://your-custom-hermes.example.com

# Optional: API Key (if required by your Hermes instance)
# HERMES_API_KEY=your_api_key_here

# Optional: Network configuration for contract deployment testing
# ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your_project_id
# PRIVATE_KEY=your_private_key_for_testing

# Gas Configuration
DEFAULT_GAS_LIMIT=250000
GAS_PRICE_MULTIPLIER=1.2